# apps

super + ctrl + shift + r
    kill -s SIGUSR1 $(pgrep sxhkd)
super + ctrl + t
    urxvtc -title terminal
super + ctrl + w
    google-chrome
super + ctrl + l
    slock
super + p
    dmenu_launch

# wm
super + {j,k}
    bspc cycle {next,prev}
super + shift + {h,l}
    bspc {push,pull} left
super + {m,t}
    bspc layout {monocle,tiled}


