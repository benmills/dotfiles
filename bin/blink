#!/bin/sh

PORT=2000
TIMES=5
STEP=25

for (( i=1; i <= $TIMES; i++ )); do
  for (( x=0; x <= 255; x += $STEP )); do
    echo "$x" | nc "localhost" $PORT
    sleep 0.1
  done
  for (( y=255; y > 0; y -= $STEP )); do
    echo "$y" | nc "localhost" $PORT
    sleep 0.1
  done
done

echo "0" | nc "localhost" $PORT
